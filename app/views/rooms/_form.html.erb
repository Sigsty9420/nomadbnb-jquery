<div class="panel panel-default">
    <div class="panel-heading">
        Create a new room
    </div>
    <div class="panel-body">
        <div class="container">
            <%= form_for @room, html: {multipart: true}  do |f| %>

            <div class="row">

                <div class="col-md-4 select nopadding">
                    <div class="form-group">
                        <label>Property Type</label>
                        <%= f.select :home_type, [["Apartment", "Apartment"], ["House","House"],["Bed & Breakfast","Bed & Breakfast"]], id: "home_type", prompt: "Select", class: "form-control" %>
                    </div>
                </div>

                <div class="col-md-4 select">
                    <div class="form-group">
                        <label>Room Type</label>
                        <%= f.select :room_type, [["Entire", "Entire"], ["Private","Private"],["Shared","Shared"] ], id: "room_type", prompt: "Select", class: "form-control" %>
                    </div>
                </div>

                <div class="col-md-4 select">
                    <div class="form-group">
                        <label>Accommodates</label>
                        <%= f.select :capacity, [["1 guest", 1], ["2 guests", 2], ["3 guests", 3], ["4 guests", 4], ["5 guests", 5], ["6+ guests", 6]], id: "capacity", prompt: "Select", class: "form-control" %>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-4 select nopadding">
                    <div class="form-group">
                        <label>Bedrooms</label>
                        <%= f.select :bed_rooms, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]], prompt: 'Select', class: 'form-control' %>
                    </div>
                </div>

                <div class="col-md-4 select">
                    <div class="form-group">
                        <label>Bathrooms</label>
                        <%= f.select :bath_rooms, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]], prompt: 'Select', class: 'form-control' %>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label>Listing Name</label>
                    <%= f.text_field :listing_name, placeholder: 'Provide a descriptive name for your listing', class: 'form-control' %>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label>Summary</label>
                    <%= f.text_area :summary, rows: 5, placeholder: 'Write a brief summary about your new room', class: 'form-control' %>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label>Address</label>
                    <%= f.text_field :address, placeholder: 'What is your address?', class: 'form-control' %>
                </div>
            </div>

            <%= f.fields_for :city do |c| %>
            <div class="row">

                <div class="col-md-4 nopadding">
                    <div class="form-group">
                        <label>City</label>
                        <%= c.text_field :name, list: "cities_autocomplete", class: 'form-control', placeholder: 'City name' %>
                        <datalist id="cities_autocomplete">
                            <%= City.all.each do |city| %>
                            <option value="<%= city.name%>"></option>
                            <% end %>
                        </datalist>
                    </div>
                </div>

                <div class="col-md-4 nopadding">
                    <div class="form-group">
                        <label>Country</label>
                        <%= c.text_field :country, list: "countries_autocomplete", class: 'form-control', placeholder: 'Country name'%>
                        <datalist id="countries_autocomplete">
                            <%= City.country_list.each do |country| %>
                            <option value="<%=country%>"></option>
                            <% end %>
                        </datalist>
                    </div>
                </div>

            </div>

            <% end %>

            <div class="row">
                <div class="col-md-4 nopadding">
                    <div class="form-group">
                        <label>Nightly Price</label>
                        <div class="input-group">
                            <div class="input-group-addon">$</div>
                            <%= f.text_field :price, placeholder: 'e.g. $50', class: 'form-control' %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label><%= f.check_box :active %>Active</label>
                </div>
            </div>

            <div class="actions nopadding">
                <%= f.submit "Save", class: "btn btn-primary" %>
            </div>
            <% end %>

        </div>
    </div>
</div>
