<div class="row">
  <div class="col-md-3">
      <div class="panel-default">
        <div class="panel-heading">Verified info</div>
        <div class="panel-body">
          Email Address
        </div>
      </div>
      <div class="panel-default">
        <div class="panel-heading">Connected accounts</div>
        <div class="panel-body">
          <% if @user.provider %>
            <%= @user.provider.capitalize %>
          <% else %>
            Manual sign up
          <% end %>
        </div>
      </div>
      <div class="panel-default">
        <div class="panel-heading">About me</div>
        <div class="panel-body">

        </div>
      </div>
  </div>
  <div class="col-md-6">
    <h2>Hey, I'm <%= @user.username %>!</h2>

    <div class="description row-space-3">
      <%= @user.description %>
    </div>
  </div>
</div>
